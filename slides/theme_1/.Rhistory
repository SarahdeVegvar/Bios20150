nmonths <- 10
months <- 1:nmonths
rabbits <- rep(0, nmonths)
rabbits[1:2] <- c(1,1)
for (i in 3:nmonths) rabbits[i] <- rabbits[i - 1] + rabbits[i - 2]
mytable <- matrix(2, nmonths)
mytable[1, ] <- months
mytable[2, ] <- rabbits
rownames(mytable) <- c("Months", "Rabbit pairs")
colnames(mytable) <- NULL
print(mytable)
